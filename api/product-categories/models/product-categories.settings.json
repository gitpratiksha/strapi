{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "product_categories",
  "info": {
    "name": "product-category",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "products": {
      "collection": "product",
      "via": "product_categories"
    },
    "feature_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
