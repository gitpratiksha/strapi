{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "products",
  "info": {
    "name": "product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "product_categories": {
      "via": "products",
      "collection": "product-categories",
      "dominant": true
    },
    "images": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "price": {
      "type": "decimal"
    },
    "sale_price": {
      "type": "decimal"
    },
    "vendor": {
      "type": "string"
    },
    "review": {
      "type": "integer"
    },
    "is_out_of_stock": {
      "type": "boolean",
      "default": false
    },
    "inventory": {
      "type": "integer"
    },
    "variants": {
      "type": "component",
      "repeatable": true,
      "component": "variants.variants"
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "is_sale": {
      "type": "boolean",
      "default": false
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "orders": {
      "collection": "order",
      "via": "products"
    },
    "video": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
